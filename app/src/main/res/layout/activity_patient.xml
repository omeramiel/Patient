<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar">
    </include>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:fabSize="normal"
        android:src="@drawable/ic_action_add"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:borderWidth="0dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/testList"
        android:choiceMode="multipleChoice"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="156dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout"
        android:layout_above="@+id/fabAddTest"
        android:layout_marginBottom="300dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_patient"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/personalWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFD068BA"
            android:textSize="14sp"
            android:text="Weight:"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/personalAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff343434"
            android:textSize="22sp"
            android:text="Age:"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/personalHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffd068ba"
            android:textSize="14sp"
            android:text="Height:"
            android:layout_above="@+id/personalWeight"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold|italic" />

    </RelativeLayout>


</RelativeLayout>